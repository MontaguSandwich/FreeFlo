# =========================
# Chain Configuration
# =========================
RPC_URL=https://base-sepolia-rpc.publicnode.com
CHAIN_ID=84532

# Contract Addresses (Base Sepolia)
OFFRAMP_V2_ADDRESS=0x...
OFFRAMP_V3_ADDRESS=0x34249f4ab741f0661a38651a08213dde1469b60f
PAYMENT_VERIFIER_ADDRESS=0xd54e8219d30c2d04a8faec64657f06f440889d70

# Solver wallet private key (with 0x prefix)
SOLVER_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE

# =========================
# Qonto Configuration (OAuth - Recommended)
# =========================
QONTO_ENABLED=true
QONTO_AUTH_METHOD=oauth
QONTO_ACCESS_TOKEN=your_oauth_access_token
QONTO_REFRESH_TOKEN=your_oauth_refresh_token
QONTO_CLIENT_ID=your_oauth_client_id
QONTO_CLIENT_SECRET=your_oauth_client_secret
QONTO_BANK_ACCOUNT_ID=your_bank_account_uuid

# Qonto Configuration (API Key - Alternative)
# QONTO_AUTH_METHOD=apikey
# QONTO_API_KEY_LOGIN=organization-slug
# QONTO_API_KEY_SECRET=your_api_secret

# Sandbox mode (for testing)
QONTO_USE_SANDBOX=false
# QONTO_STAGING_TOKEN=your_staging_token

# Fee in basis points (100 = 1%)
QONTO_FEE_BPS=50

# =========================
# Attestation Service
# =========================
ATTESTATION_SERVICE_URL=http://127.0.0.1:4001

# =========================
# TLSNotary Prover (Optional)
# =========================
# Enable automatic proof generation
PROVER_ENABLED=false

# Path to TLSNotary examples crate
# TLSN_EXAMPLES_PATH=/path/to/tlsn/crates/examples

# API key credentials for prover (different from OAuth)
# QONTO_API_KEY_LOGIN=your_org_slug
# QONTO_API_KEY_SECRET=your_api_secret
# QONTO_BANK_ACCOUNT_SLUG=your_org_slug

# Prover timeout in ms (default 300000 = 5 minutes)
# PROVER_TIMEOUT=300000

# =========================
# Server Configuration
# =========================
HEALTH_PORT=8080
QUOTE_API_PORT=8081

# =========================
# Orchestrator Settings
# =========================
POLL_INTERVAL=5000
MIN_USDC_AMOUNT=1000000
MAX_USDC_AMOUNT=10000000000

# Database path
DB_PATH=./solver.db

# =========================
# INSTRUCTIONS
# =========================
# 1. Copy this file: cp env.example .env
# 2. Fill in your values
# 3. Never commit .env to git!

