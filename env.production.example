# ============================================
# ZKP2P Off-Ramp Production Environment
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# Blockchain Configuration
# ============================================
RPC_URL=https://base-sepolia-rpc.publicnode.com
CHAIN_ID=84532

# Contract Addresses (Base Sepolia)
OFFRAMP_V3_ADDRESS=0x34249f4ab741f0661a38651a08213dde1469b60f
PAYMENT_VERIFIER_ADDRESS=0xd54e8219d30c2d04a8faec64657f06f440889d70

# Solver Wallet (KEEP SECRET!)
SOLVER_PRIVATE_KEY=0x_YOUR_SOLVER_PRIVATE_KEY_HERE

# ============================================
# Attestation Service
# ============================================
# Witness private key (must match authorized witness on PaymentVerifier contract)
WITNESS_PRIVATE_KEY=0x_YOUR_ATTESTATION_WITNESS_PRIVATE_KEY_HERE
ATTESTATION_PORT=4001
DOMAIN_NAME=zkp2p-offramp
DOMAIN_VERSION=1
# VERIFYING_CONTRACT is set to PAYMENT_VERIFIER_ADDRESS automatically

# ============================================
# Qonto Banking (OAuth)
# ============================================
QONTO_ENABLED=true
QONTO_AUTH_METHOD=oauth
QONTO_ACCESS_TOKEN=your_oauth_access_token
QONTO_REFRESH_TOKEN=your_oauth_refresh_token
QONTO_CLIENT_ID=your_oauth_client_id
QONTO_CLIENT_SECRET=your_oauth_client_secret
QONTO_BANK_ACCOUNT_ID=your_bank_account_uuid
QONTO_FEE_BPS=50

# ============================================
# Optional: Domain Configuration
# ============================================
# Your domain for the solver API (used in CORS)
# DOMAIN=api.your-domain.com

# ============================================
# Optional: Monitoring
# ============================================
# SENTRY_DSN=https://xxx@sentry.io/xxx
# DATADOG_API_KEY=xxx

