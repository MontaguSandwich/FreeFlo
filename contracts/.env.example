# ===========================================
# Contracts Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# RPC URL for Base Sepolia (or mainnet for production)
RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Deployer private key (with 0x prefix)
# This account needs ETH for gas fees
DEPLOYER_PRIVATE_KEY=0x...

# Solver private key (with 0x prefix)
# This is the solver account that will be authorized on the contract
SOLVER_PRIVATE_KEY=0x...

# Etherscan API key for contract verification (optional)
ETHERSCAN_API_KEY=

# Chain ID (84532 for Base Sepolia, 8453 for Base Mainnet)
CHAIN_ID=84532
